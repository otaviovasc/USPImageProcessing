<div class="container">
  <h1>Upload your image</h1>
  <%= simple_form_for(@image) do |f| %>
    <div class="form-inputs">
      <%= f.input :original_image, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Processar foto", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
